<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="WebApp_ID"
	version="2.5">

	<display-name>WebServices</display-name>

	<!-- Authorization servlet -->
	<servlet>
		<servlet-name>SAML 2.0 authorization Servlet</servlet-name>
		<servlet-class>com.idega.saml.client.authorization.servlet.SAMLAuthorizationServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<!-- Authorization filter -->
	<filter>
		<filter-name>SAML 2.0 authorization Filter</filter-name>
		<filter-class>com.idega.saml.client.authorization.servlet.SAMLAuthorizationServlet</filter-class>
		<init-param>
	       <param-name>allowedOrigins</param-name>
	       <param-value>*</param-value>
	   	</init-param>
	   	<init-param>
	       <param-name>allowedMethods</param-name>
	       <param-value>*</param-value>
	   	</init-param>
	   	<init-param>
	       <param-name>allowedHeaders</param-name>
	       <param-value>*</param-value>
	   	</init-param>
	</filter>
	<servlet-mapping>
		<servlet-name>SAML 2.0 authorization Servlet</servlet-name>
		<url-pattern>/authorization/acs/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SAML 2.0 authorization Servlet</servlet-name>
		<url-pattern>/authorization/slo/*</url-pattern>
	</servlet-mapping>
	<filter-mapping>
		<filter-name>SAML 2.0 authorization Filter</filter-name>
		<url-pattern>/authorization/acs/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>SAML 2.0 authorization Filter</filter-name>
		<url-pattern>/authorization/slo/*</url-pattern>
	</filter-mapping>
	
</web-app>